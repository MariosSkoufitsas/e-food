<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopList">

    <ListView
        android:id="@+id/ListShow"
        android:layout_width="395dp"
        android:layout_height="481dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <ImageView
        android:id="@+id/butpre2"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/ApostPara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ApostPara"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <Button
        android:id="@+id/btndelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Διαγραφη"
        app:layout_constraintBottom_toBottomOf="@+id/ApostPara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ApostPara" />

    <Button
        android:id="@+id/ApostPara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Αποστολη Παραγγελιας"
        app:layout_constraintEnd_toStartOf="@+id/btndelete"
        app:layout_constraintStart_toEndOf="@+id/butpre2"
        app:layout_constraintTop_toBottomOf="@+id/suntimi" />

    <TextView
        android:id="@+id/suntimi"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListShow" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Σύνολο"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/suntimi"
        app:layout_constraintEnd_toStartOf="@+id/suntimi"
        app:layout_constraintTop_toTopOf="@+id/suntimi" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:text="€"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/suntimi"
        app:layout_constraintStart_toEndOf="@+id/suntimi"
        app:layout_constraintTop_toTopOf="@+id/suntimi" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:text="ΛΙΣΤΑ ΠΑΡΑΓΓΕΛΙΩΝ"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>